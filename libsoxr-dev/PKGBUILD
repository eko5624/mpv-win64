pkgname=libsoxr-dev
pkgver=0.1.3
pkgrel=1
pkgdesc='The SoX Resampler library that aims to give fast and high quality results for any constant resampling ratio'
arch=('x86_64')
url="https://sourceforge.net/p/soxr/wiki/Home/"
license=('LGPL')
source=("git+https://gitlab.com/shinchiro/soxr.git")
md5sums=('SKIP')

build() { 
  cd $srcdir/soxr
  rm -rf build && mkdir build && cd build
  $CMAKE .. -G "MinGW Makefiles" -DCMAKE_INSTALL_PREFIX=/opt -DCMAKE_BUILD_TYPE=Release \
    -DBUILD_SHARED_LIBS=OFF \
    -DBUILD_TESTS=OFF \
    -DHAVE_WORDS_BIGENDIAN_EXITCODE=1
  $CMAKE --build .
}

package() {
  cd $srcdir/soxr/build
  $CMAKE --install . --prefix=$pkgdir/opt
}
