pkgname=libssh-dev
pkgver=0.9.6
pkgrel=1
pkgdesc='Library for accessing ssh client services through C libraries'
arch=('x86_64')
url="https://www.libssh.org/"
makedepends=('zlib-dev' 'mbedtls-dev')
license=('LGPL')
source=("git+https://git.libssh.org/projects/libssh.git"
        "libssh-0002-mingw-as-unix.patch"
        "libssh-0003-install-static-lib.patch"
        "libssh-0004-lld.patch")
md5sums=('SKIP' 'SKIP' 'SKIP' 'SKIP')

build() { 
  cd $srcdir/libssh
  patch -p1 -i $srcdir/libssh-0002-mingw-as-unix.patch
  patch -p1 -i $srcdir/libssh-0003-install-static-lib.patch
  patch -p1 -i $srcdir/libssh-0004-lld.patch
  #sed -i "9a SET (CMAKE_C_COMPILER_WORKS 1)\nSET (CMAKE_CXX_COMPILER_WORKS 1)\n" CMakeLists.txt
  rm -rf build && mkdir build && cd build
  MSYS2_ARG_CONV_EXCL="-DCMAKE_INSTALL_PREFIX="
  $CMAKE .. -G "MinGW Makefiles" -DCMAKE_INSTALL_PREFIX=/opt -DCMAKE_BUILD_TYPE=Release \
    -DWITH_ZLIB=ON \
    -DMBEDTLS_ROOT_DIR='/opt' \
    -DMBEDTLS_INCLUDE_DIR='/opt/include/mbedtls' \
    -DWITH_MBEDTLS=ON \
    -DBUILD_STATIC_LIB=ON \
    -DWITH_EXAMPLES=OFF \
    -DBUILD_SHARED_LIBS=OFF \
  $CMAKE --build .
}

package() {
  cd $srcdir/libssh/build
  $CMAKE --install . --prefix=$pkgdir/opt
}
