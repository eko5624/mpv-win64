pkgname=libssh-dev
pkgver=0.10.5
pkgrel=1
pkgdesc='Library for accessing ssh client services through C libraries'
arch=('x86_64')
url="https://www.libssh.org/"
makedepends=('zlib-dev' 'mbedtls-dev')
license=('LGPL')
options=('strip')
source=("git+https://gitlab.com/libssh/libssh-mirror.git")
md5sums=('SKIP')

build() { 
  cd $srcdir/libssh-mirror
  rm -rf build && mkdir build && cd build
  cmake .. \
    -G "MinGW Makefiles" \
    -DCMAKE_INSTALL_PREFIX=/opt \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_FIND_ROOT_PATH=/opt \
    -DBUILD_SHARED_LIBS=OFF \
    -DWITH_ZLIB=ON \
    -DWITH_MBEDTLS=ON \
    -DMBEDTLS_INCLUDE_DIR='/opt/include' \
    -DWITH_EXAMPLES=OFF \
    -DBUILD_STATIC_LIB=ON \
    -DCMAKE_C_FLAGS='-DHAVE_COMPILER__FUNC__=1 -DMBEDTLS_ALLOW_PRIVATE_ACCESS -DMBEDTLS_THREADING_C -DMBEDTLS_THREADING_PTHREAD' 
  cmake --build .
}

package() {
  cd $srcdir/libssh-mirror/build
  DESTDIR=$pkgdir cmake --install .
  mv $pkgdir/msys64/* $pkgdir
  rm -rf $pkgdir/msys64
  echo "Libs.private: -lmbedtls -lmbedx509 -lmbedcrypto -lz -lwsock32 -lbcrypt -lws2_32 -lpthread" >> $pkgdir/opt/lib/pkgconfig/libssh.pc
  echo "Cflags.private: -DLIBSSH_STATIC" >> $pkgdir/opt/lib/pkgconfig/libssh.pc
}
