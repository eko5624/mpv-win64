pkgname=libssh-dev
pkgver=0.9.6
pkgrel=1
pkgdesc='Library for accessing ssh client services through C libraries'
arch=('x86_64')
url="https://www.libssh.org/"
makedepends=('zlib-dev' 'mbedtls-dev')
license=('LGPL')
options=('staticlibs' 'strip')
source=("git+https://git.libssh.org/projects/libssh.git"
        "libssh-0001-install-modified-pc-file.patch"
        "libssh-0002-avoid-name-collision.patch"
        "001-install-static-lib.patch"
        "010-lld.patch")
md5sums=('SKIP' 'SKIP' 'SKIP' 'SKIP' 'SKIP')

build() { 
  cd $srcdir/libssh
  patch -p1 -i $srcdir/libssh-0001-install-modified-pc-file.patch
  patch -p1 -i $srcdir/libssh-0002-avoid-name-collision.patch
  patch -p1 -i $srcdir/001-install-static-lib.patch
  patch -p1 -i $srcdir/010-lld.patch
  rm -rf build && mkdir build && cd build
  MSYS2_ARG_CONV_EXCL="-DCMAKE_INSTALL_PREFIX=" \
  $CMAKE .. -G "MinGW Makefiles" -DCMAKE_INSTALL_PREFIX=/opt -DCMAKE_BUILD_TYPE=Release \
    -DWITH_ZLIB=ON \
    -DWITH_MBEDTLS=ON \
    -DMBEDTLS_INCLUDE_DIR='/opt/include' \
    -DBUILD_STATIC_LIB=ON \
    -DWITH_EXAMPLES=OFF \
    -DBUILD_SHARED_LIBS=OFF \
    -DBUILD_STATIC_LIB=ON \
    -DCMAKE_C_FLAGS='${CMAKE_C_FLAGS} -DMBEDTLS_ALLOW_PRIVATE_ACCESS -DMBEDTLS_THREADING_C -DMBEDTLS_THREADING_PTHREAD' 
  /d/msys64/mingw64/bin/mingw32-make.exe
}

package() {
  cd $srcdir/libssh/build
  /d/msys64/mingw64/bin/mingw32-make.exe DESTDIR=$pkgdir install
  mv $pkgdir/msys64/* $pkgdir
  rm -rf $pkgdir/msys64
}
