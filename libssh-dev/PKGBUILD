pkgname=libssh-dev
pkgver=0.9.6
pkgrel=1
pkgdesc='Library for accessing ssh client services through C libraries'
arch=('x86_64')
url="https://www.libssh.org/"
makedepends=('mbedtls-dev' 'zlib-dev')
license=('LGPL')
source=("git+https://git.libssh.org/projects/libssh.git")
md5sums=('SKIP')

build() { 
  cd $srcdir/libssh
  patch -p1 -i $srcdir/*.patch
  rm -rf build && mkdir build && cd build
  $CMAKE .. -G "MinGW Makefiles" -DCMAKE_INSTALL_PREFIX=/opt -DCMAKE_BUILD_TYPE=Release \
    -DWITH_ZLIB=ON \
    -DWITH_MBEDTLS=ON \
    -DMBEDTLS_INCLUDE_DIR=/opt/include \
    -DBUILD_STATIC_LIB=ON \
    -DWITH_EXAMPLES=OFF \
    -DBUILD_SHARED_LIBS=OFF \
    -DCMAKE_C_FLAGS='${CMAKE_C_FLAGS} -DMBEDTLS_ALLOW_PRIVATE_ACCESS -DMBEDTLS_THREADING_C -DMBEDTLS_THREADING_PTHREAD'
  $CMAKE --build .
}

package() {
  cd $srcdir/libssh/build
  $CMAKE --install . --prefix=$pkgdir/opt
}
