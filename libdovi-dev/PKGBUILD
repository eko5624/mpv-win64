pkgname=libdovi-dev
pkgver=3.1.2
pkgrel=1
pkgdesc='Library to read and write Dolby Vision metadata (C-API)'
arch=('x86_64')
url="https://github.com/quietvoid/dovi_tool/"
license=('MIT')
source=()
md5sums=()

package() {
  cd $srcdir
  git clone \
    --depth 1 \
    --sparse \
    --filter=tree:0 \
    https://github.com/quietvoid/dovi_tool.git
  cd dovi_tool
  git sparse-checkout set dolby_vision
  cd dolby_vision
  mkdir build
  set CARGO_PROFILE_RELEASE_CODEGEN_UNITS=1
  cargo cinstall --manifest-path=Cargo.toml --destdir=build --release --library-type staticlib
  mv $pkgdir/msys64/* $pkgdir
  rm -rf $pkgdir/msys64
}
