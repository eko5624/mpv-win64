pkgname=libspeex-dev
pkgver=1.2.1
pkgrel=1
pkgdesc='A free codec for free speech'
arch=('x86_64')
url="https://speex.org/"
license=('BSD')
source=("git+https://gitlab.xiph.org/xiph/speex.git#tag=Speex-$pkgver")
md5sums=('SKIP')

build() {
  cd $srcdir/speex
  ./autogen.sh
  ./configure prefix=/opt --disable-shared
  make
}

package() {
  cd $srcdir/speex
  make DESTDIR=$pkgdir install
}
