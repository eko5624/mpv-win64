pkgname=libpng-dev
pkgver=1.6.37
pkgrel=1
pkgdesc='A collection of routines used to create PNG format graphics'
arch=('x86_64')
url="http://www.libpng.org/pub/png/libpng.html"
makedepends=('zlib')
license=('custom')
source=("git+https://github.com/glennrp/libpng.git")
md5sums=('SKIP')

build() {
  cd $srcdir/libpng
  ./autogen.sh
  ./configure --prefix=/opt --disable-shared
  make
}

package() {
  cd $srcdir/libpng
  make DESTDIR=$pkgdir install
}
