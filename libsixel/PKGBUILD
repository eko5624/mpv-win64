pkgname=libsixel-dev
pkgver=1.8.6
pkgrel=1
pkgdesc='Encoder/decoder implementation for DEC SIXEL graphics'
arch=('x86_64')
url="https://github.com/saitoha/sixel"
makedepends=('libjpeg-dev' 'libpng-dev')
license=('BSD')
source=("git+https://github.com/saitoha/libsixel.git")
md5sums=('SKIP')

build() {
  cd $srcdir/libsixel
  mkdir work
  meson . work --prefix=/opt --buildtype=release --prefer-static -Dtests=disabled -Dimg2sixel=disabled -Dsixel2png=disabled -Dpython=disabled  
  cd work
  ninja
}

package() {
  cd $srcdir/libsixel/work
  DESTDIR=$pkgdir ninja install
  mv $pkgdir/msys64/* $pkgdir
  rm -rf $pkgdir/msys64
}
