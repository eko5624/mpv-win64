pkgname=libsixel-dev
pkgver=1.10.3
pkgrel=1
pkgdesc='Encoder/decoder implementation for DEC SIXEL graphics'
arch=('x86_64')
url="https://github.com/saitoha/sixel"
makedepends=('libjpeg-dev' 'libpng-dev')
license=('BSD')
source=("git+https://github.com/libsixel/libsixel.git#tag=v$pkgver")
md5sums=('SKIP')

build() {
  cd $srcdir/libsixel
  mkdir work
  meson . work --prefix=/opt --buildtype=plain --default-library=static -Dtests=disabled -Dimg2sixel=disabled -Dsixel2png=disabled 
  cd work
  ninja
}

package() {
  cd $srcdir/libsixel/work
  DESTDIR=$pkgdir ninja install
  mv $pkgdir/msys64/* $pkgdir
  rm -rf $pkgdir/msys64
}
