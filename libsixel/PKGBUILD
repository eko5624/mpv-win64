pkgname=libsixel-dev
pkgver=1.8.6
pkgrel=1
pkgdesc='Encoder/decoder implementation for DEC SIXEL graphics'
arch=('x86_64')
url="https://github.com/saitoha/sixel"
makedepends=('libjpeg-dev' 'libpng-dev')
license=('BSD')
source=("git+https://github.com/saitoha/libsixel.git#tag=v$pkgver")
md5sums=('SKIP')

build() {
  cd $srcdir/libsixel
  ./configure \
    --prefix=/opt \
    LIBPNG_CFLAGS='-I/opt/include' \
    LIBPNG_LIBS='-L/opt/lib -lpng16' \
    --with-jpeg \
    --with-png \
    --disable-img2sixel \
    --disable-sixel2png \
    --disable-python \
    --enable-static \
    --disable-shared
  make 
}

package() {
  cd $srcdir/libsixel
  make DESTDIR=$pkgdir install
}
