pkgname=libsixel-dev
pkgver=1.10.3
pkgrel=1
pkgdesc='Encoder/decoder implementation for DEC SIXEL graphics'
arch=('x86_64')
url="https://github.com/saitoha/sixel"
makedepends=('libjpeg-dev' 'libpng-dev')
license=('BSD')
source=("git+https://github.com/libsixel/libsixel.git#tag=v$pkgver")
md5sums=('SKIP')

build() {
  cd $srcdir/libsixel
  sed -i '/sys\/select.h/d' meson.build
  sed -i '/sys\/signal.h/d' meson.build
  meson build --prefix=/opt --buildtype=plain --default-library=static -Dtests=disabled -Dimg2sixel=disabled -Dsixel2png=disabled 
  meson compile -C build
}

package() {
  cd $srcdir/libsixel
  meson install -C build --destdir $pkgdir
  # mv $pkgdir/msys64/* $pkgdir
  # rm -rf $pkgdir/msys64
}
