pkgname=libsixel-dev
pkgver=1.10.3
pkgrel=1
pkgdesc='Encoder/decoder implementation for DEC SIXEL graphics'
arch=('x86_64')
url="https://github.com/libsixel/libsixel"
makedepends=('libjpeg-dev' 'libpng-dev' 'zlib-dev')
license=('BSD')
source=("git+https://github.com/libsixel/libsixel"
        "libsixel-0001-fix-non-unix-builds.patch")
md5sums=('SKIP' 'SKIP')

build() { 
  cd $srcdir/libsixel
  patch -p1 -i $srcdir/libsixel-0001-fix-non-unix-builds.patch   
  meson build --prefix=/opt --buildtype=release --default-library=static --libdir='/opt/lib' \
    -Djpeg=enabled \
    -Dpng=enabled \
    -Dimg2sixel=disabled \
    -Dsixel2png=disabled \
    -Dgdk-pixbuf2=disabled \
    -Dpython=disabled \
    -Dtests=disabled
  meson compile -C build 
}

package() {
  cd $srcdir/libsixel
  DESTDIR=$pkgdir meson install -C build
  mv $pkgdir/msys64/* $pkgdir
  rm -rf $pkgdir/msys64
}
