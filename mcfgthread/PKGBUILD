# Maintainer: nyfair <nyfair2012@gmail.com>
pkgname=mcfgthread
pkgver=20220725
pkgrel=1
pkgdesc='MCF thread model'
arch=('x86_64')
url="https://gcc-mcf.lhmouse.com/"
license=('custom')
source=()
md5sums=()

build() {
  cd /d/ucrt64
  rm -rf ssl
  rm -rf share
  rm -rf sbin
  rm -rf etc
  rm -rf libexec
  mv lib/libmcfgthread.dll.a ./
  rm -rf lib/*.dll.a
  mv ./libmcfgthread.dll.a lib/
  rm -rf include/pkg*
  rm -rf lib/pkg*
  rm -rf lib/cmake*

  rm bin/autopoint
  rm bin/envsubst.exe
  rm bin/iconv.exe
  rm bin/msg*
  rm bin/recode-sr-latin.exe
  rm include/autosprintf.h
  rm include/gettext-po.h
  rm include/libintl.h
  rm -rf lib/gettext
  rm lib/libasprintf*
  rm lib/libgettext*
  rm lib/libintl*

  rm bin/b2.exe
  rm bin/bjam.exe
  rm bin/libboost*
  rm -rf include/boost
  rm lib/libboost*

  rm bin/bunzip2.exe
  rm include/bzlib.h
  rm lib/libbz2*

  rm bin/libexpat*
  rm bin/xmlwf.exe
  rm include/expat*
  rm lib/libexpat*

  rm bin/derb.exe
  rm bin/gen*
  rm bin/*icu*
  rm bin/makeconv.exe
  rm bin/uconv.exe
  rm -rf include/unicode
  rm -rf lib/*icu*

  rm include/iconv.h
  rm include/libcharset.h
  rm include/localcharset.h
  rm lib/libcharset*
  rm lib/libiconv*

  rm bin/*lua*
  rm include/lauxlib.h
  rm include/*lua*
  rm -rf lib/*lua*

  rm bin/ncursesw6-config
  rm bin/x86_64-w64-mingw32-captoinfo.exe
  rm bin/x86_64-w64-mingw32-clear.exe
  rm bin/x86_64-w64-mingw32-infocmp.exe
  rm bin/x86_64-w64-mingw32-infotocap.exe
  rm bin/x86_64-w64-mingw32-reset.exe
  rm bin/x86_64-w64-mingw32-tabs.exe
  rm bin/x86_64-w64-mingw32-tic.exe
  rm bin/x86_64-w64-mingw32-toe.exe
  rm bin/x86_64-w64-mingw32-tput.exe
  rm bin/x86_64-w64-mingw32-tset.exe
  rm -rf include/ncur*
  rm lib/libform*
  rm lib/libmenu*
  rm lib/libncur*
  rm lib/libpanel*
  rm -rf lib/terminfo

  rm bin/libcrypto*
  rm bin/libssl*
  rm bin/openssl.exe
  rm bin/update-ca-trust
  rm bin/*p11*
  rm bin/trust.exe
  rm -rf include/openssl
  rm -rf include/p11*
  rm -rf lib/engines*
  rm lib/libcrypto*
  rm lib/libssl*
  rm -rf lib/*p11*
  rm -rf lib/pkcs11*

  rm bin/*pcre*
  rm include/pcre2*
  rm lib/*pcre*

  rm bin/2to3*
  rm bin/idle*
  rm bin/libpython*
  rm bin/gdb*
  rm bin/py*
  rm -rf include/python*
  rm -rf lib/python*

  rm bin/dbhash.exe
  rm bin/*sql*
  rm include/*sql*
  rm -rf lib/*sql*

  rm bin/tcl*
  rm bin/tk*
  rm bin/wish*
  rm include/itcl*
  rm include/*Stubs*
  rm -rf include/tcl*
  rm -rf include/tdb*
  rm -rf include/X11
  rm -rf include/tk*
  rm -rf lib/dde*
  rm -rf lib/*tcl*
  rm -rf lib/*tk*
  rm -rf lib/reg*
  rm -rf lib/tdb*
  rm -rf lib/thread*

  rm bin/libtermcap*
  rm include/termcap.h
  rm lib/libtermcap*

  rm bin/edit*
  rm -rf include/editline
  rm lib/libedit*

  rm bin/*xxh*.exe
  rm include/xxh*

  rm bin/*lzma*
  rm bin/*xz*
  rm -rf include/lzma*
  rm lib/liblzma*

  rm bin/*zstd*.exe
  rm include/zdict.h
  rm include/zstd*
  rm lib/libzstd*
}

package() {
  export PKGEXT='.pkg.tar.xz'
  mkdir -p $pkgdir/opt/bin
  cp /d/ucrt64/bin/libmcfgthread* $pkgdir/opt/bin/
  strip $pkgdir/opt/bin/*
}
