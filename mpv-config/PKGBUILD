pkgname=config
pkgver=1.0
pkgrel=1
pkgdesc='MPV config files'
arch=('x86_64')
url="https://github.com/eko5624/mpv-config/"
license=('custom')
source=(git+"https://github.com/eko5624/mpv-config")
options=(!strip)
md5sums=('SKIP')

pkgver() {
  cd $srcdir/mpv-config
  printf "%s.%s" "$pkgver" "$(git rev-parse --short HEAD)"
}

package() {
  export PKGEXT='.pkg.tar.xz'
  mkdir -p $pkgdir/opt/mpv
  mv $srcdir/mpv-config/portable_config $pkgdir/opt/mpv
  mv $srcdir/mpv-config/installer $pkgdir/opt/mpv
  mv $srcdir/mpv-config/d3dcompiler_43.dll $pkgdir/opt/mpv
}
