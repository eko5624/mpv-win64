pkgname=config
pkgver=1.0
pkgrel=1
pkgdesc='MPV config files'
arch=('x86_64')
url="https://github.com/eko5624/mpv-config/"
license=('custom')
source=(git+"https://github.com/eko5624/mpv-config")
options=(!strip)
md5sums=('SKIP')

build() {
  cd $srcdir/mpv-config
  short_sha=$(git rev-parse --short HEAD)
  echo $commit_sha > SHORT_SHA
}

package() {
  export PKGEXT='.pkg.tar.xz'
  mkdir -p $pkgdir/opt/mpv
  cd $srcdir/mpv-config
  mv portable_config $pkgdir/opt/mpv
  mv installer $pkgdir/opt/mpv
  mv d3dcompiler_43.dll $pkgdir/opt/mpv
  mv SHORT_SHA $pkgdir/opt/mpv
}
