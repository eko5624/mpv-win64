pkgname=libvpx-dev
pkgver=1.12.0
pkgrel=1
pkgdesc='WebM VP8/VP9 Codec SDK'
arch=('x86_64')
url="https://chromium.googlesource.com/webm/libvpx/"
makedepends=("yasm")
license=('BSD')
source=("git+https://chromium.googlesource.com/webm/libvpx.git")
md5sums=('SKIP')

build() {
  cd $srcdir/libvpx/build
  CFLAGS="$EXTRA_CFLAGS $CFLAGS -fno-asynchronous-unwind-tables"
  ../configure --prefix=/opt \       
    --disable-examples \
    --disable-docs \
    --disable-tools \
    --disable-unit-tests \
    --disable-decode-perf-tests \
    --disable-encode-perf-tests \
    --as=yasm
  make
}

package() {
  cd $srcdir/libvpx/build
  make DESTDIR=$pkgdir install
  rm -rf $pkgdir/opt/share $pkgdir/opt/bin
}
