pkgname=libvpl-dev
pkgver=2023.4.0
pkgrel=1
pkgdesc='the successor to IntelÂ® Media SDK'
arch=('x86_64')
url="https://github.com/intel/libvpl"
license=('MIT')
source=("git+https://github.com/intel/libvpl.git")
md5sums=('SKIP')

build() {
  cd $srcdir/libvpl
  rm -rf build && mkdir build && cd build
  cmake .. \
    -G "Ninja" \
    -DCMAKE_INSTALL_PREFIX=/opt \
    -DCMAKE_BUILD_TYPE=Release \
    -DBUILD_SHARED_LIBS=OFF \
    -DBUILD_DISPATCHER=ON \
    -DBUILD_DEV=ON \
    -DBUILD_TESTS=OFF \
    -DBUILD_PREVIEW=OFF \
    -DBUILD_TOOLS=OFF \
    -DBUILD_TOOLS_ONEVPL_EXPERIMENTAL=OFF \
    -DINSTALL_EXAMPLE_CODE=OFF 
  cmake --build .
}  
  
package() {
  cd $srcdir/libvpl/build
  DESTDIR=$pkgdir cmake --install .
  mv $pkgdir/msys64/* $pkgdir
  rm -rf $pkgdir/msys64
  rm -rf $pkgdir/opt/etc
  rm -rf $pkgdir/opt/share
} 
