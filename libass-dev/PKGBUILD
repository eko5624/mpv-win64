# Maintainer: nyfair <nyfair2012@gmail.com>
pkgname=libass-dev
pkgver=0.16.0
pkgrel=1
pkgdesc='A portable library for SSA/ASS subtitles rendering'
arch=('x86_64')
url="https://github.com/libass/libass/"
makedepends=('nasm' 'freetype2-dev' 'fribidi-dev' 'harfbuzz-dev' 'libiconv-dev' 'libunibreak-dev')
license=('BSD')
source=("git+https://github.com/libass/libass")
md5sums=('SKIP')

build() {
  cd $srcdir/libass
  ./autogen.sh
  ./configure prefix=/opt --disable-shared
  make
}

package() {
  cd $srcdir/libass
  make DESTDIR=$pkgdir install
}
