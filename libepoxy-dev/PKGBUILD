pkgname=libepoxy-dev
pkgver=1.5.10
pkgrel=1
pkgdesc='Epoxy is a library for handling OpenGL function pointer management for you'
arch=('x86_64')
url="https://github.com/anholt/libepoxy"
license=('MIT')
source=("git+https://github.com/anholt/libepoxy"
        "265.patch")
md5sums=('SKIP' 'SKIP')

build() {
  cd $srcdir/libepoxy
  patch -p1 -i $srcdir/265.patch 
  mkdir work
  meson . work --prefix=/opt --buildtype=release --default-library=static \
    -Dtests=false -Ddocs=false
  cd work
  ninja
}

package() {
  cd $srcdir/libepoxy/work
  DESTDIR=$pkgdir ninja install
  mv $pkgdir/msys64/* $pkgdir
  rm -rf $pkgdir/msys64
}
