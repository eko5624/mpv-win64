# Maintainer: nyfair <nyfair2012@gmail.com>
pkgname=mpv
pkgver=0.34.1
pkgrel=1
pkgdesc='a free, open source, and cross-platform media player'
arch=('x86_64')
url='https://mpv.io/'
makedepends=("yasm"  
             "lame-dev" 
             "libjxl-dev"  
             "dav1d-dev" 
             "libvorbis_aotuv-dev" 
             "opus-dev" 
             "ffnvcodec-dev"
             "ffmpeg-dev" 
             "luajit2-dev" 
             "ffnvcodec-dev" 
             "freetype2-dev" 
             "fribidi-dev" 
             "harfbuzz-dev" 
             "libass-dev" 
             "lcms2-dev"
             "libbluray-dev" 
             "libdvdcss-dev" 
             "libdvdread-dev" 
             "libdvdnav-dev" 
             "libepoxy-dev" 
             "libplacebo-dev"
             "shaderc-dev" 
             "spirv-cross-dev"
             "vapoursynth-dev" 
             "vulkan-dev")
license=('GPL3')
source=("git+https://github.com/mpv-player/mpv")
md5sums=('SKIP')

build() {
  cd $srcdir/mpv
  python bootstrap.py
  LDFLAGS="$LDFLAGS -lstdc++ -lssp"
  CC=gcc.exe python waf configure --prefix=/opt --disable-iconv --disable-debug-build --enable-libbluray --enable-dvdnav
  python waf build
}

package() {
  export PKGEXT='.pkg.tar.xz'
  mkdir -p $pkgdir/opt/bin  
  cd $srcdir/mpv/build
  strip mpv.*
  mv mpv.* $pkgdir/opt/bin
}
