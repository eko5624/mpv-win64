# Maintainer: nyfair <nyfair2012@gmail.com>
pkgname=mpv
pkgver=0.34.1
pkgrel=1
pkgdesc='a free, open source, and cross-platform media player'
arch=('x86_64')
url='https://mpv.io/'
makedepends=("yasm"  
             "libjpeg-dev"
             "libpng-dev"
             "libsdl2-dev"
             "libsixel-dev"
             "angle-headers-dev"
             "ffmpeg-dev"
             "mujs-dev"
             "rubberband-dev"
             "luajit2-dev" 
             "freetype2-dev" 
             "fribidi-dev" 
             "harfbuzz-dev" 
             "libass-dev" 
             "lcms2-dev"
             "libbluray-dev" 
             "libdvdnav-dev"
             "libiconv-dev"
             "libplacebo-dev"
             "shaderc-dev" 
             "spirv-cross-dev"
             "vapoursynth-dev" 
             "vulkan-dev"
             "zlib-dev")
license=('GPL3')
source=("git+https://github.com/mpv-player/mpv")
md5sums=('SKIP')

build() {
  cd $srcdir/mpv
  python bootstrap.py
  LDFLAGS="$LDFLAGS -static -lstdc++ -lssp"
  CC=gcc.exe python waf configure --prefix=/opt --disable-iconv --disable-debug-build --enable-libbluray --enable-dvdnav
  python waf build
}

package() {
  export PKGEXT='.pkg.tar.xz'
  mkdir -p $pkgdir/opt/bin  
  cd $srcdir/mpv/build
  strip mpv.*
  mv mpv.* $pkgdir/opt/bin
}
