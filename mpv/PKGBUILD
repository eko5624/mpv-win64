# Maintainer: nyfair <nyfair2012@gmail.com>
pkgname=mpv-shared
pkgver=0.34.1
pkgrel=1
pkgdesc='a free, open source, and cross-platform media player'
arch=('x86_64')
url='https://mpv.io/'
makedepends=("yasm"
             "libjpeg-dev"
             "libpng-dev"
             "libsdl2-dev"
             "libsixel-dev"
             "angle-headers-dev"
             "ffmpeg-shared-dev"
             "mujs-dev"
             "rubberband-dev"
             "freetype2-dev"
             "fribidi-dev"
             "harfbuzz-dev"
             "libass-dev"
             "lcms2-dev"
             "libbluray-dev"
             "libdvdnav-dev"
             "libplacebo-shared-dev"
             "luajit2-shared-dev"
             "shaderc-dev"
             "spirv-cross-dev"
             "vapoursynth-shared-dev"
             "vulkan-shared-dev"
             "zlib-dev")
license=('GPL3')
source=("git+https://github.com/mpv-player/mpv")
md5sums=('SKIP')

build() {
  cd $srcdir/mpv
  python bootstrap.py
  LDFLAGS="$LDFLAGS -lstdc++ -lssp" 
  CC=gcc.exe python waf configure --prefix=/opt \
    --disable-debug-build \
    --disable-iconv \
    --enable-lua \
    --enable-javascript \
    --enable-sdl2 \
    --enable-libbluray \
    --enable-dvdnav \
    --enable-rubberband \
    --enable-lcms2 \
    --enable-openal \
    --enable-spirv-cross \
    --enable-vulkan \
    --enable-vapoursynth    
  python waf build
}

package() {
  depends=('ffmpeg-shared' 'vapoursynth-shared' 'mcfgthread')
  export PKGEXT='.pkg.tar.xz'
  mkdir -p $pkgdir/opt/bin  
  cd $srcdir/mpv/build
  strip mpv.*
  mv mpv.* $pkgdir/opt/bin
}
