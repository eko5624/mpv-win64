# Maintainer: nyfair <nyfair2012@gmail.com>
pkgname=(libmpv-git mpv-git)
pkgver=0.35.0
pkgrel=1
pkgdesc='a free, open source, and cross-platform media player'
arch=('x86_64')
url='https://mpv.io/'
makedepends=("yasm"
             "libjpeg-dev"
             "libpng-dev"
             "libsdl2-dev"
             "libsixel-dev"
             "angle-headers-dev"
             "ffmpeg-dev"
             "mujs-dev"
             "rubberband-dev"
             "luajit2-dev"
             "freetype2-dev"
             "fribidi-dev"
             "harfbuzz-dev"
             "libass-dev"
             "lcms2-dev"
             "libbluray-dev"
             "libdvdnav-dev"
             "libplacebo-dev"
             "shaderc-dev"
             "spirv-cross-dev"
             "vapoursynth-dev"
             "vulkan-dev"
             "zlib-dev")
license=('GPL3')
source=("git+https://github.com/mpv-player/mpv")
md5sums=('SKIP')

build() {
  cd $srcdir/mpv
  python bootstrap.py 
  CC=gcc.exe LDFLAGS="$LDFLAGS -lstdc++ -lssp" python waf configure --prefix=/opt \
    --disable-debug-build \
    --disable-iconv \
    --enable-libmpv-shared \
    --enable-lua \
    --enable-javascript \
    --enable-sdl2 \
    --enable-libbluray \
    --enable-dvdnav \
    --enable-rubberband \
    --enable-lcms2 \
    --enable-openal 
  python waf build

  # get latest commit sha
  short_sha=$(git rev-parse --short HEAD)
  echo $short_sha > SHORT_SHA
}

package_libmpv-git() {
  export PKGEXT='.pkg.tar.xz'
  mkdir -p $pkgdir/opt/libmpv/include 
  cd $srcdir/mpv/build
  strip -s mpv-2.dll
  mv mpv-2.dll $pkgdir/opt/libmpv
  mv mpv.dll.a $pkgdir/opt/libmpv
  mv mpv.def $pkgdir/opt/libmpv
  mv ../libmpv/client.h $pkgdir/opt/libmpv/include
  mv ../libmpv/stream_cb.h $pkgdir/opt/libmpv/include
  mv ../libmpv/render.h $pkgdir/opt/libmpv/include
  mv ../libmpv/render_gl.h $pkgdir/opt/libmpv/include
}

package_mpv-git() {
  export PKGEXT='.pkg.tar.xz'
  mkdir -p $pkgdir/opt/mpv
  cd $srcdir/mpv/build
  mv mpv.exe $pkgdir/opt/mpv
  mv mpv.com $pkgdir/opt/mpv
  strip -s $pkgdir/opt/mpv/mpv.*
  mv ../SHORT_SHA $pkgdir/opt/mpv
}
