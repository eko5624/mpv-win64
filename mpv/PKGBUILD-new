# Maintainer: nyfair <nyfair2012@gmail.com>
pkgname=(libmpv-git mpv-git)
pkgver=0.34.1
pkgrel=1
pkgdesc='a free, open source, and cross-platform media player'
arch=('x86_64')
url='https://mpv.io/'
makedepends=("yasm"
             "libjpeg-dev"
             "libpng-dev"
             "libsdl2-dev"
             "libsixel-dev"
             "angle-headers-dev"
             "ffmpeg-dev"
             "mujs-dev"
             "rubberband-dev"
             "luajit2-dev" 
             "freetype2-dev"
             "fribidi-dev"
             "harfbuzz-dev"
             "libass-dev"
             "lcms2-dev"
             "libbluray-dev"
             "libdvdnav-dev"
             "libplacebo-dev"
             "shaderc-dev"
             "spirv-cross-dev"
             "vapoursynth-dev"
             "vulkan-dev"
             "zlib-dev")
license=('GPL3')
source=("git+https://github.com/mpv-player/mpv.git")
md5sums=('SKIP')

build() {
  cd $srcdir/mpv
  meson setup build --prefix=/opt --buildtype=release --default-library=shared --prefer-static \
    -Dlibmpv=true \
    -Dlua=enabled \
    -Dopenal=enabled \
    -Drubberband=enabled \
    -Dsdl2=enabled \
    -Dlibbluray=enabled \
    -Ddvdnav=enabled \
    -Degl-angle=enabled
  meson compile -C build
}

package_libmpv-git() {
  export PKGEXT='.pkg.tar.xz'
  mkdir -p $pkgdir/opt/libmpv/include
  cd $srcdir/mpv/build
  strip -s libmpv-2.dll
  mv libmpv-2.dll $pkgdir/opt/libmpv
  mv libmpv.dll.a $pkgdir/opt/libmpv
  mv ../libmpv/mpv.def $pkgdir/opt/libmpv
  mv ../libmpv/client.h $pkgdir/opt/libmpv/include
  mv ../libmpv/stream_cb.h $pkgdir/opt/libmpv/include
  mv ../libmpv/render.h $pkgdir/opt/libmpv/include
  mv ../libmpv/render_gl.h $pkgdir/opt/libmpv/include
}

package_mpv-git() {
  export PKGEXT='.pkg.tar.xz'
  mkdir -p $pkgdir/opt/mpv
  cd $srcdir/mpv/build
  mv mpv.exe $pkgdir/opt/mpv
  mv generated/mpv.com $pkgdir/opt/mpv
  strip -s $pkgdir/opt/mpv/mpv.*
}
