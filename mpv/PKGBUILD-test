# Maintainer: nyfair <nyfair2012@gmail.com>
pkgname=(libmpv-git mpv-git)
pkgver=0.34.1
pkgrel=1
pkgdesc='a free, open source, and cross-platform media player'
arch=('x86_64')
url='https://mpv.io/'
makedepends=("yasm"
             "libsdl2-dev"
             "ffmpeg-dev"
             "luajit2-dev"
             "freetype2-dev"
             "fribidi-dev"
             "harfbuzz-dev"
             "libass-dev"
             "lcms2-dev"
             "libbluray-dev"
             "libdvdnav-dev"
             "libiconv-dev"
             "libplacebo-dev"
             "shaderc-dev"
             "spirv-cross-dev"
             "vapoursynth-dev"
             "vulkan-dev"
             "zlib-dev")
license=('GPL3')
source=("git+https://github.com/mpv-player/mpv")
md5sums=('SKIP')

build() {
  cd $srcdir/mpv
  export CC="gcc.exe"   
  export LDFLAGS="-static" 
  python bootstrap.py
  python waf configure --prefix=/opt \
    --enable-static-build \
    --enable-libmpv-shared \
    --enable-lua \
    --enable-sdl2 \
    --enable-libbluray \
    --enable-dvdnav \
    --enable-lcms2 
  python waf build
}

package_libmpv-git() {
  export PKGEXT='.pkg.tar.xz'
  mkdir -p $pkgdir/opt/libmpv/include 
  cd $srcdir/mpv/build
  strip -s mpv-2.dll
  mv mpv-2.dll $pkgdir/opt/libmpv
  mv mpv.dll.a $pkgdir/opt/libmpv
  mv mpv.def $pkgdir/opt/libmpv
  mv ../libmpv/client.h $pkgdir/opt/libmpv/include
  mv ../libmpv/stream_cb.h $pkgdir/opt/libmpv/include
  mv ../libmpv/render.h $pkgdir/opt/libmpv/include
  mv ../libmpv/render_gl.h $pkgdir/opt/libmpv/include
}

package_mpv-git() {
  export PKGEXT='.pkg.tar.xz'
  mkdir -p $pkgdir/opt/mpv
  cd $srcdir/mpv/build
  mv mpv.exe $pkgdir/opt/mpv
  mv mpv.com $pkgdir/opt/mpv
  strip -s $pkgdir/opt/mpv/mpv.*
}
