pkgname=openal-soft-dev
pkgver=1.23.1
pkgrel=1
pkgdesc='Software implementation of the OpenAL 3D audio API'
arch=('x86_64')
url="https://github.com/kcat/openal-soft/"
license=('GPL')
source=("git+https://github.com/kcat/openal-soft")
md5sums=('SKIP')

build() {
  cd $srcdir/openal-soft
  rm -rf build && mkdir build && cd build
  cmake .. -G "MinGW Makefiles" -DCMAKE_INSTALL_PREFIX=/opt -DCMAKE_BUILD_TYPE=Release \
    -DLIBTYPE=STATIC \
    -DALSOFT_UTILS=OFF \
    -DALSOFT_EXAMPLES=OFF \
    -DALSOFT_TESTS=OFF \
    -DALSOFT_BACKEND_PIPEWIRE=OFF 
  cmake --build .
}

package() {
  cd $srcdir/openal-soft/build
  DESTDIR=$pkgdir cmake --install .
}
