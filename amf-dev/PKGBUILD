pkgname=amf-headers-dev
pkgver=1.4.28
pkgrel=1
pkgdesc='Header files for AMD Advanced Media Framework'
arch=('x86_64')
url="https://github.com/GPUOpen-LibrariesAndSDKs/AMF/"
license=('MIT')
source=("git+https://github.com/GPUOpen-LibrariesAndSDKs/AMF.git#tag=v$pkgver")
md5sums=('SKIP')

package() {
  cd $srcdir/AMF
  mkdir -p $pkgdir/opt/include/AMF
  mv amf/public/include/core $pkgdir/opt/include/AMF
  mv amf/public/include/components $pkgdir/opt/include/AMF
}
