pkgname=libzvbi-dev
pkgver=0.2.37
pkgrel=1
pkgdesc='VBI capture and decoding library'
arch=('x86_64')
url="https://github.com/zapping-vbi/zvbi"
license=('LGPL')
source=("git+https://github.com/zapping-vbi/zvbi.git")
md5sums=('SKIP')

build() {
  cd $srcdir/zvbi
  ./autogen.sh
  ./configure \
    --prefix=/opt \
    --disable-shared \
    --enable-static 
  make
}

package() {
  cd $srcdir/zvbi
  make DESTDIR=$pkgdir install
}
