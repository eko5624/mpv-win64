pkgname=libsdl2-dev
pkgver=2.26.0
pkgrel=1
pkgdesc='Provide low level access to audio, keyboard, mouse, joystick, and graphics hardware via OpenGL and Direct3D'
arch=('x86_64')
url="https://github.com/libsdl-org/SDL/"
license=('ZLIB')
source=("git+https://github.com/libsdl-org/SDL"
        "libsdl2-0001-mingw-header.patch")
md5sums=('SKIP' 'SKIP')

build() {
  cd $srcdir/SDL
  patch -p1 -i $srcdir/libsdl2-0001-mingw-header.patch
  rm -rf build && mkdir build && cd build
  ../autogen.sh
  ../configure prefix=/opt --disable-shared --enable-static
  make
}

package() {
  cd $srcdir/SDL/build
  make DESTDIR=$pkgdir install
  rm -rf $pkgdir/opt/share $pkgdir/opt/bin
}  
