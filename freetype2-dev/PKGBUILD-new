pkgname=freetype2-dev
pkgver=2_13_0
pkgrel=1
pkgdesc='Font rasterization library'
arch=('x86_64')
url="https://www.freetype.org/"
makedepends=('libpng-dev' 'zlib-dev')
license=('GPL')
source=("git+https://github.com/freetype/freetype.git#tag=VER-${pkgver//_/-}")
md5sums=('SKIP') 

build() {
  cd $srcdir/freetype
  meson build --prefix=/opt --buildtype=release --default-library=static \
    -Dharfbuzz=disabled \
    -Dtests=disabled \
    -Dbrotli=disabled \
    -Dpng=enabled \
    -Dzlib=enabled
  meson compile -C build      
}

package() {
  cd $srcdir/freetype
  DESTDIR=$pkgdir meson install -C build
  mv $pkgdir/msys64/* $pkgdir
  rm $pkgdir/libpng16.a
  rm $pkgdir/pkgconfig/libpng.pc
  rm $pkgdir/pkgconfig/libpng16.pc
  rm -rf $pkgdir/msys64
}
