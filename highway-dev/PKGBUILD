pkgname=highway-dev
pkgver=1.0.2
pkgrel=1
pkgdesc='C++ library for SIMD (Single Instruction, Multiple Data)'
arch=('x86_64')
url="https://github.com/google/highway/"
license=('Apache-2.0')
source=("git+https://github.com/google/highway.git#commit=9c775721c1531fd1cf11cf52bbfde4d076691628")
md5sums=('SKIP')

build() {
  cd $srcdir/highway
  rm -rf build && mkdir build && cd build
  $CMAKE .. -G "MinGW Makefiles" -DCMAKE_INSTALL_PREFIX=/opt -DCMAKE_BUILD_TYPE=Release \
    -DBUILD_TESTING=OFF \
    -DCMAKE_GNUtoMS=OFF \
    -DHWY_CMAKE_ARM7=OFF \
    -DHWY_ENABLE_CONTRIB=OFF \
    -DHWY_ENABLE_EXAMPLES=OFF \
    -DHWY_ENABLE_INSTALL=ON \
    -DHWY_WARNINGS_ARE_ERRORS=OFF 
  $CMAKE --build .
}  
  
package() {
  cd $srcdir/highway/build
  $CMAKE --install . --prefix=$pkgdir/opt
}  
