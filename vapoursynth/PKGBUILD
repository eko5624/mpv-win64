# Maintainer: nyfair <nyfair2012@gmail.com>
pkgname=vapoursynth-dev
pkgver=63
pkgrel=1
pkgdesc='A video processing framework with the future in mind'
arch=('x86_64')
url="http://www.vapoursynth.com/"
license=('LGPL')
source=("https://github.com/vapoursynth/vapoursynth/releases/download/R$pkgver/VapourSynth64-Portable-R$pkgver.7z")
md5sums=('SKIP')

package() {
  cd $srcdir
  set -x
  gendef VSScript.dll
  gendef VapourSynth.dll
  dlltool -d VSScript.def -y libvsscript.a 
  dlltool -d VapourSynth.def -y libvapoursynth.a 
  mkdir -p $pkgdir/github/home/opt/lib/pkgconfig
  mkdir -p $pkgdir/github/home/opt/include
  mv sdk/include/VapourSynth.h $pkgdir/github/home/opt/include
  mv sdk/include/VSScript.h $pkgdir/github/home/opt/include
  mv sdk/include/VSHelper.h $pkgdir/github/home/opt/include
  cp libvsscript.a $pkgdir/github/home/opt/lib
  cp libvapoursynth.a $pkgdir/github/home/opt/lib   
  cp ../*.pc $pkgdir/github/home/opt/lib/pkgconfig
  sed -i "s/_ver/$pkgver/" $pkgdir/github/home/opt/lib/pkgconfig/vapoursynth.pc
  sed -i "s/_ver/$pkgver/" $pkgdir/github/home/opt/lib/pkgconfig/vapoursynth-script.pc
}
