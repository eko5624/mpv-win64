# Maintainer: nyfair <nyfair2012@gmail.com>
pkgname=vapoursynth-dev
pkgver=59
pkgrel=1
pkgdesc='A video processing framework with the future in mind'
arch=('x86_64')
url="http://www.vapoursynth.com/"
license=('LGPL')
source=("git+https://github.com/vapoursynth/vapoursynth#tag=R$pkgver"
        "git+https://github.com/sekrit-twc/zimg"
        "vapoursynth-0001-statically-link.patch")
md5sums=('SKIP' 'SKIP' 'SKIP')

build() {
  cd $srcdir/zimg
  ./autogen.sh
  ./configure --prefix=/opt --disable-shared
  make install  
  
  cd $srcdir/vapoursynth
  patch -p1 -i $srcdir/vapoursynth-0001-statically-link.patch
  ./autogen.sh
  ./configure --prefix=/opt --enable-core --disable-python-module --disable-vsscript --disable-plugins --disable-shared
  make 
}

package() {
  cd $srcdir/vapoursynth
  make DESTDIR=$pkgdir install
}
