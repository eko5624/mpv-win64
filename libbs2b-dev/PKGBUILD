pkgname=libbs2b-dev
pkgver=3.1.0
pkgrel=1
pkgdesc='Bauer stereophonic-to-binaural DSP effect library'
arch=('x86_64')
url="https://bs2b.sourceforge.io/"
license=('MIT')
source=("git+https://github.com/alexmarsev/libbs2b.git"
        "libbs2b-0001-build-library-only.patch")
md5sums=('SKIP' 'SKIP')

build() {
  cd $srcdir/libbs2b
  patch -p1 -i $srcdir/libbs2b-0001-build-library-only.patch
  ./autogen.sh
  ./configure prefix=/opt --enable-static --disable-shared
  make
}

package() {
  cd $srcdir/libbs2b
  make DESTDIR=$pkgdir install
}
