# Maintainer: nyfair <nyfair2012@gmail.com>
pkgname=harfbuzz-dev
pkgver=4.4.0
pkgrel=1
pkgdesc='OpenType text shaping engine'
arch=('x86_64')
url="https://github.com/harfbuzz/harfbuzz/"
license=('GPL')
source=("git+https://github.com/harfbuzz/harfbuzz#tag=$pkgver")
md5sums=('SKIP')

build() {
  cd $srcdir/harfbuzz
  mkdir work
  meson . work --prefix=/opt --buildtype=release --default-library=static \
    -Dtests=disabled -Ddocs=disabled -Dbenchmark=disabled
  cd work
  ninja
}

package() {
  cd $srcdir/harfbuzz/work
  DESTDIR=$pkgdir ninja install
  mv $pkgdir/msys64/* $pkgdir
  rm -rf $pkgdir/msys64
}
