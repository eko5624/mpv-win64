pkgname=aom-dev
pkgver=3.7.0
pkgrel=1
pkgdesc='AV1 codec library'
arch=('x86_64')
url="https://aomedia.org/"
license=('spdx:BSD-2-Clause')
source=("https://storage.googleapis.com/aom-releases/libaom-$pkgver.tar.gz)
md5sums=('SKIP')

build() {
  cd $srcdir/libaom-$pkgver
  # fix google's shit
  #sed -ri 's;_PREFIX.+CMAKE_INSTALL_BINDIR;_FULL_BINDIR;' build/cmake/aom_install.cmake
  rm -rf out && mkdir out && cd out
  cmake .. -G "MinGW Makefiles" \
    -DCMAKE_INSTALL_PREFIX=/opt \
    -DCMAKE_BUILD_TYPE=Release \
    -DBUILD_SHARED_LIBS=OFF \
    -DENABLE_EXAMPLES=OFF \
    -DENABLE_DOCS=OFF \
    -DENABLE_TOOLS=OFF \
    -DENABLE_TESTS=OFF \
    -DENABLE_TESTDATA=OFF \
    -DCONFIG_UNIT_TESTS=0 \
    -DCONFIG_AV1_DECODER=0
  cmake --build .
} 
  
package() {
  cd $srcdir/libaom-$pkgver/out  
  DESTDIR=$pkgdir cmake --install .
}
