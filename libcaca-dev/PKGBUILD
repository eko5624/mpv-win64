pkgname=libcaca-dev
pkgver=0.99.beta20 
pkgrel=1
pkgdesc='Color AsCii Art library'
arch=('x86_64')
url="https://github.com/cacalabs/libcaca"
license=('LGPL')
source=("git+https://github.com/cacalabs/libcaca.git#tag=v$pkgver"
        "0001-win32-is-not-msvc-it-could-be.mingw.patch"
        "0002-correct-installation-order.mingw.patch"
        "0006-no-undefined.all.patch")
md5sums=('SKIP' 'SKIP' 'SKIP' 'SKIP')

build() {
  cd $srcdir/libcaca
  patch -p1 -i $srcdir/0001-win32-is-not-msvc-it-could-be.mingw.patch
  patch -p1 -i $srcdir/0002-correct-installation-order.mingw.patch
  patch -p1 -i $srcdir/0006-no-undefined.all.patch
  autoreconf -fi
  ./configure \
    --build=x86_64 \
    --prefix=/opt \
    --disable-shared \
    --enable-static \
    --disable-csharp \
    --disable-cxx \
    --disable-doc \
    --disable-gl \
    --disable-ncurses \
    --disable-python \
    --disable-slang    
  make
}

package() {
  cd $srcdir/libcaca
  make DESTDIR=$pkgdir install
}
