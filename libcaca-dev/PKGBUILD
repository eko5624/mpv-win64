pkgname=libcaca-dev
pkgver=0.99.beta20 
pkgrel=1
pkgdesc='Color AsCii Art library'
arch=('x86_64')
url="https://github.com/cacalabs/libcaca"
makedepends=('nasm' 'freetype2-dev' 'fribidi-dev' 'harfbuzz-dev')
license=('LGPL')
source=("git+https://github.com/cacalabs/libcaca.git#tag=v$pkgver")
md5sums=('SKIP')

build() {
  cd $srcdir/libcaca
  ./configure \ 
    --prefix=/opt \
    --disable-shared \
    --enable-static \
    --disable-csharp \
    --disable-doc \
    --disable-ncurses \
    --disable-ruby 
  make
}

package() {
  cd $srcdir/libcaca
  make DESTDIR=$pkgdir install
}
