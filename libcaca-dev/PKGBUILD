pkgname=libcaca-dev
pkgver=0.99.beta20 
pkgrel=1
pkgdesc='Color AsCii Art library'
arch=('x86_64')
url="https://github.com/cacalabs/libcaca"
license=('LGPL')
source=("git+https://github.com/cacalabs/libcaca.git#tag=v$pkgver")
md5sums=('SKIP')

build() {
  cd $srcdir/libcaca
  autoreconf -ivf
  ./configure \ 
    --prefix=/opt \
    --build=BUILD \
    --disable-shared \
    --enable-static \
    --disable-doc 
  make
}

package() {
  cd $srcdir/libcaca
  make DESTDIR=$pkgdir install
}
