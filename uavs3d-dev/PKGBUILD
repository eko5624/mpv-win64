pkgname=uavs3d-dev
pkgver=1.1
pkgrel=1
pkgdesc='An opensource and cross-platform avs3 decoder, supports AVS3-P2 baseline profile'
arch=('x86_64')
url="https://github.com/uavs3/uavs3d"
license=('GPL')
source=("git+https://github.com/uavs3/uavs3d.git")
md5sums=('SKIP')

build() {
  cd $srcdir/uavs3d
  mkdir -p build/linux && cd build/linux
  $CMAKE ../.. -G "MinGW Makefiles" -DCMAKE_INSTALL_PREFIX=/opt -DCMAKE_BUILD_TYPE=Release \
    -DBUILD_SHARED_LIBS=OFF \
    -DCOMPILE_10BIT=ON
  $MAKE 
}

package() {
  cd $srcdir/uavs3d/build/linux
  $MAKE DESTDIR=$pkgdir install
  mv $pkgdir/msys64/* $pkgdir
}
