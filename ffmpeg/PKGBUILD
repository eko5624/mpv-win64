pkgname=(ffmpeg-dev ffmpeg-git)
pkgver=7.0.2
pkgrel=1
pkgdesc='Complete and free Internet live audio and video solution'
arch=('x86_64')
url="http://ffmpeg.org/"
makedepends=("amf-headers-dev"
             "aom-dev"
             "bzip2-dev"
             "avisynth-dev"
             "dav1d-dev"
             "davs2-dev"
             "ffnvcodec-dev"
             "lame-dev"
             "libaribcaption-dev"
             "libbs2b-dev"
             "libjxl-dev"
             "libmodplug-dev"
             "libmysofa-dev"
             "libogg-dev"
             "libopenmpt-dev"
             "libplacebo-dev"
             "libsdl2-dev"
             "libsoxr-dev"
             "libspeex-dev"
             "libsrt-dev"
             "libssh-dev"
             "libva-dev"
             "libvorbis_aotuv-dev"
             "libvpl-dev"
             "libvpx-dev"
             "libwebp-dev"
             "libxml2-dev"
             "libxvid-dev"
             "libzimg-dev"
             "libzvbi-dev"
             "openssl-dev"
             "opus-dev"
             "shaderc-dev"
             "svtav1-dev"
             "uavs3d-dev"
             "vapoursynth-dev")
license=('LGPL')
source=("git+https://github.com/FFmpeg/FFmpeg")
md5sums=('SKIP')

package_ffmpeg-dev() {
  cd $srcdir/FFmpeg
  eval "${att_args}"
  ./configure \
    --prefix=/opt \
    --arch=x86_64 \
    --target-os=mingw32 \
    --pkg-config-flags=--static \
    --disable-debug \
    --disable-doc \
    --enable-gpl \
    --enable-version3 \
    --enable-nonfree \
    --enable-pic \
    --enable-postproc \
    --enable-static \
    --disable-ffplay \
    --disable-ffprobe \
    --disable-avdevice \
    --disable-shared \
    --disable-pthreads \
    --enable-w32threads \
    --extra-cflags="${ffmpeg_extra_cflags}" \
    --extra-libs="${ffmpeg_extra_libs}" \
    --extra-ldflags="${ffmpeg_extra_ldflags}" \
    --enable-amf \
    --enable-avisynth \
    --enable-cuvid${ffmpeg_cuda_llvm} \
    --enable-lcms2 \
    --enable-libaom \
    --enable-libaribcaption \
    --enable-libbs2b \
    --enable-libdav1d \
    --enable-libdavs2 \
    --enable-libjxl \
    --enable-libvpl \
    --enable-libmodplug \
    --enable-libmp3lame \
    --enable-libmysofa \
    --enable-libopenmpt \
    --enable-libopus \
    --enable-libplacebo \
    --enable-libsvtav1 \
    --enable-libshaderc \
    --enable-libsoxr \
    --enable-libspeex \
    --enable-libsrt \
    --enable-libssh \
    --enable-libuavs3d \
    --enable-libvorbis \
    --enable-libvpx \
    --enable-libwebp \
    --enable-libxml2 \
    --enable-libxvid \
    --enable-libzimg \
    --enable-libzvbi \
    --enable-openssl \
    --enable-vaapi \
    --enable-vapoursynth \
    --enable-zlib \
    --disable-decoder=libaom_av1 \
    --disable-decoder=libvorbis \
    --disable-decoder=libopus \
    --disable-encoder=opus \
    --disable-encoder=vorbis
  make DESTDIR=$pkgdir install
  rm -rf $pkgdir/opt/bin $pkgdir/opt/share $pkgdir/opt/lib/*.def
}

package_ffmpeg-git() {
  export PKGEXT='.pkg.tar.xz'
  mkdir -p $pkgdir/opt/ffmpeg
  cd $srcdir/FFmpeg
  make DESTDIR=$pkgdir install
  rm -rf $pkgdir/opt/bin/*.lib $pkgdir/opt/share $pkgdir/opt/include $pkgdir/opt/lib
  strip $pkgdir/opt/bin/*
  mv $pkgdir/opt/bin/ffmpeg.exe $pkgdir/opt/ffmpeg
  rm -rf $pkgdir/opt/bin

  # get latest commit sha
  short_sha=$(git rev-parse --short HEAD)
  echo $short_sha > SHORT_SHA
  mv SHORT_SHA $pkgdir/opt/ffmpeg
}
