pkgname=(ffmpeg-dev ffmpeg-git)
pkgver=5.1.2
pkgrel=1
pkgdesc='Complete and free Internet live audio and video solution'
arch=('x86_64')
url="http://ffmpeg.org/"
makedepends=("nasm"
             "amf-headers-dev"
             "avisynth-dev"
             "dav1d-dev"
             "davs2-dev"
             "gmp-dev"
             "lame-dev"
             "libbs2b-dev"
             "libjxl-dev"
             "libmodplug-dev"
             "libmysofa-dev"
             "libogg-dev"
             "libopenmpt-dev"
             "libsdl2-dev"
             "libsoxr-dev"
             "libspeex-dev"
             "libsrt-dev"
             "libssh-dev"
             "libvorbis_aotuv-dev"
             "libvpl-dev"
             "libvpx-dev"
             "libwebp-dev"
             "libxml2-dev"
             "libxvid-dev"
             "libzimg-dev"
             "libzvbi-dev"
             "mbedtls-dev"
             "opus-dev"
             "ffnvcodec-dev"
             "uavs3d-dev"
             "vapoursynth-dev")
license=('LGPL')
source=("git+https://github.com/FFmpeg/FFmpeg")
md5sums=('SKIP')

build() {
  CARGS="--target-os=mingw32 --arch=x86_64 --disable-debug --disable-doc \
         --enable-gpl --enable-version3 --enable-nonfree --enable-pic --pkg-config-flags=--static \
         --disable-ffplay --disable-ffprobe --disable-avdevice --enable-static --disable-shared \
         --disable-pthreads --enable-w32threads"
}

package_ffmpeg-dev() {
  cd $srcdir/FFmpeg
  ./configure \
    --prefix=/opt \
    $CARGS \
    --extra-libs="-lstdc++ -lssp" \
    --extra-ldflags="-static -static-libgcc -static-libstdc++" \
    --disable-mediafoundation \
    --enable-amf \
    --enable-avisynth \
    --enable-gmp \
    --enable-libbs2b \
    --enable-libdav1d \
    --enable-libdavs2 \
    --enable-libjxl \
    --enable-libvpl \
    --enable-libmodplug \
    --enable-libmp3lame \
    --enable-libmysofa \
    --enable-libopenmpt \
    --enable-libsoxr \
    --enable-libspeex \
    --enable-libsrt \
    --enable-libssh \
    --enable-libuavs3d \
    --enable-libvorbis \
    --enable-libvpx \
    --enable-libwebp \
    --enable-libxml2 \
    --enable-libxvid \
    --enable-libzimg \
    --enable-libzvbi \
    --enable-libopus \
    --enable-mbedtls \
    --disable-decoder=libvorbis \
    --disable-decoder=libopus \
    --disable-encoder=opus \
    --disable-encoder=vorbis \
    --enable-vapoursynth
  make DESTDIR=$pkgdir install
  rm -rf $pkgdir/opt/bin $pkgdir/opt/share $pkgdir/opt/lib/*.def
}

package_ffmpeg-git() {
  export PKGEXT='.pkg.tar.xz'
  mkdir -p $pkgdir/opt/ffmpeg
  cd $srcdir/FFmpeg
  make DESTDIR=$pkgdir install
  rm -rf $pkgdir/opt/bin/*.lib $pkgdir/opt/share $pkgdir/opt/include $pkgdir/opt/lib
  strip $pkgdir/opt/bin/*
  mv $pkgdir/opt/bin/ffmpeg.exe $pkgdir/opt/ffmpeg
  rm -rf $pkgdir/opt/bin
}
