pkgname=libjxl-dev
pkgver=0.6.1
pkgrel=1
pkgdesc='JPEG XL image format reference implementation'
arch=('x86_64')
url="https://github.com/libjxl/libjxl/"
license=('BSD')
source=("git+https://github.com/libjxl/libjxl")
md5sums=('SKIP')

build() { 
  cd $srcdir/libjxl
  git submodule update --init --recursive --depth 1 --recommend-shallow third_party/{brotli,highway,skcms}  
  rm -rf build && mkdir build && cd build
  $CMAKE .. -G "MinGW Makefiles" -DCMAKE_INSTALL_PREFIX=/opt -DCMAKE_BUILD_TYPE=Release \
    -DBUILD_SHARED_LIBS=OFF \
    -DCMAKE_POSITION_INDEPENDENT_CODE=ON \
    -DJPEGXL_STATIC=ON \
    -DBUILD_TESTING=OFF \
    -DJPEGXL_EMSCRIPTEN=OFF \
    -DJPEGXL_BUNDLE_LIBPNG=OFF \
    -DJPEGXL_ENABLE_TOOLS=OFF \
    -DJPEGXL_ENABLE_VIEWERS=OFF \
    -DJPEGXL_ENABLE_DOXYGEN=OFF \
    -DJPEGXL_ENABLE_EXAMPLES=OFF \
    -DJPEGXL_ENABLE_MANPAGES=OFF \
    -DJPEGXL_ENABLE_JNI=OFF \
    -DJPEGXL_ENABLE_PLUGINS=OFF \
    -DJPEGXL_ENABLE_DEVTOOLS=OFF \
    -DJPEGXL_ENABLE_BENCHMARK=OFF \
    -DJPEGXL_ENABLE_SJPEG=OFF \
    -DCMAKE_CXX_FLAGS='${CMAKE_CXX_FLAGS} -static-libgcc -static-libstdc++ -Wa,-muse-unaligned-vector-move' \ # fix crash on AVX2 proc (64bit) due to unaligned stack memory
    -DCMAKE_C_FLAGS='${CMAKE_C_FLAGS} -static-libgcc -static-libstdc++ -Wa,-muse-unaligned-vector-move'    
  /d/msys64/mingw64/bin/mingw32-make.exe
}

package() {
  cd $srcdir/libjxl/build
  /d/msys64/mingw64/bin/mingw32-make.exe DESTDIR=$pkgdir install
  mv $pkgdir/msys64/* $pkgdir
  rm -rf $pkgdir/msys64
  cd third_party
  mv brotli/*.pc $pkgdir/opt/lib/pkgconfig
  mv brotli/libbrotlienc-static.a $pkgdir/opt/lib/libbrotlienc.a
  mv brotli/libbrotlidec-static.a $pkgdir/opt/lib/libbrotlidec.a
  mv brotli/libbrotlicommon-static.a $pkgdir/opt/lib/libbrotlicommon.a  
  sed -i 's/Libs.private: -lm/Libs.private: -lm -lstdc++/' $pkgdir/opt/lib/pkgconfig/libjxl.pc  
  sed -i 's/Libs.private: -lm/Libs.private: -lm -lstdc++/' $pkgdir/opt/lib/pkgconfig/libjxl_threads.pc 
}
