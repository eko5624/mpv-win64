pkgname=libjxl-dev
pkgver=0.8.2
pkgrel=1
pkgdesc='JPEG XL image format reference implementation'
arch=('x86_64')
url="https://github.com/libjxl/libjxl/"
makedepends=('brotli-dev' 'highway-dev' 'lcms2-dev' 'libjpeg-dev' 'libpng-dev' 'zlib-dev')
license=('BSD')
source=("git+https://github.com/libjxl/libjxl.git"
        "git+https://github.com/libjpeg-turbo/libjpeg-turbo.git")
md5sums=('SKIP' 'SKIP')

build() { 
  # Fix AVX2 related crash due to unaligned stack memory
  export CXXFLAGS="$CXXFLAGS -Wa,-muse-unaligned-vector-move"
  export CFLAGS="$CFLAGS -Wa,-muse-unaligned-vector-move"
  
  cd $srcdir/libjxl
  CFLAGS+=" -masm=att"
  CXXFLAGS+=" -masm=att"
  rm -rf third_party/libjpeg-turbo
  mv $srcdir/libjpeg-turbo third_party/libjpeg-turbo
  rm -rf build && mkdir build && cd build
  cmake .. \
    -G "Ninja" \
    -DCMAKE_INSTALL_PREFIX=/opt \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_FIND_ROOT_PATH=/opt \
    -DBUILD_SHARED_LIBS=OFF \
    -DCMAKE_POSITION_INDEPENDENT_CODE=ON \
    -DJPEGXL_STATIC=ON \
    -DBUILD_TESTING=OFF \
    -DJPEGXL_EMSCRIPTEN=OFF \
    -DJPEGXL_BUNDLE_LIBPNG=OFF \
    -DJPEGXL_ENABLE_TOOLS=OFF \
    -DJPEGXL_ENABLE_VIEWERS=OFF \
    -DJPEGXL_ENABLE_DOXYGEN=OFF \
    -DJPEGXL_ENABLE_EXAMPLES=OFF \
    -DJPEGXL_ENABLE_MANPAGES=OFF \
    -DJPEGXL_ENABLE_JNI=OFF \
    -DJPEGXL_ENABLE_SKCMS=OFF \
    -DJPEGXL_ENABLE_PLUGINS=OFF \
    -DJPEGXL_ENABLE_DEVTOOLS=OFF \
    -DJPEGXL_ENABLE_BENCHMARK=OFF \
    -DJPEGXL_ENABLE_SJPEG=OFF \
	  -DJPEGXL_ENABLE_AVX512=ON \
	  -DJPEGXL_ENABLE_AVX512_ZEN4=ON \
    -DJPEGXL_ENABLE_AVX512_SPR=ON \
    -DJPEGXL_FORCE_SYSTEM_LCMS2=ON \
    -DJPEGXL_FORCE_SYSTEM_BROTLI=ON \
    -DJPEGXL_FORCE_SYSTEM_HWY=ON
  cmake --build .
}

package() {
  cd $srcdir/libjxl/build
  DESTDIR=$pkgdir cmake --install .
  mv $pkgdir/msys64/* $pkgdir
  rm -rf $pkgdir/msys64
  sed -i 's/libjxl_cms//' $pkgdir/opt/lib/pkgconfig/libjxl.pc
  sed -i 's/-lm/-lm -llcms2/' $pkgdir/opt/lib/pkgconfig/libjxl.pc
}
