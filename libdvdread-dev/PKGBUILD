# Maintainer: nyfair <nyfair2012@gmail.com>
pkgname=libdvdread-dev
pkgver=6.1.3
pkgrel=1
pkgdesc='Provides a simple foundation for reading DVD video disks'
arch=('x86_64')
url="https://www.videolan.org/developers/libdvdnav.html"
makedepends=('libdvdcss-dev')
license=('GPL')
source=("https://download.videolan.org/pub/videolan/libdvdread/$pkgver/libdvdread-$pkgver.tar.bz2")
md5sums=('SKIP')

build() {
  cd $srcdir/libdvdread-$pkgver
  ./configure prefix=/opt --disable-shared --with-libdvdcss
  make
}

package() {
  cd $srcdir/libdvdread-$pkgver
  make DESTDIR=$pkgdir install
  sed -i 's/Requires.private/Requires/' $pkgdir/opt/lib/pkgconfig/*.pc
  rm -rf $pkgdir/opt/share
}
