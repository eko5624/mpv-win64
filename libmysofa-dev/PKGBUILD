pkgname=libmysofa-dev
pkgver=1.3.2
pkgrel=1
pkgdesc='Reader for AES SOFA files to get better HRTFs'
arch=('x86_64')
url="https://github.com/hoene/libmysofa/"
makedepends=('zlib-dev')
license=('BSD')
source=()
md5sums=()

build() { 
  cd $srcdir
  git clone \
    --depth 1 \
    --sparse \
    --filter=tree:0 \
    https://github.com/hoene/libmysofa.git
  cd libmysofa
  git sparse-checkout set --no-cone '/*' '!tests'
  rm -rf build && mkdir build && cd build
  cmake .. -G "MinGW Makefiles" -DCMAKE_INSTALL_PREFIX=/opt -DCMAKE_BUILD_TYPE=Release \
    -DBUILD_SHARED_LIBS=OFF \
    -DBUILD_TESTS=OFF
  cmake --build .
}

package() {
  cd $srcdir/libmysofa/build
  DESTDIR=$pkgdir cmake --install .
}
