pkgname=angle-headers-dev
pkgver=1.0.xx
pkgrel=1
pkgdesc='Almost Native Graphics Layer Engine'
arch=('x86_64')
url="https://chromium.googlesource.com/angle/angle/"
license=('custom')
source=("git+https://chromium.googlesource.com/angle/angle#branch=main")
md5sums=('SKIP')

package() {
  cd $srcdir/angle
  mkdir -p $pkgdir/opt/include
  mv include/EGL $pkgdir/opt/include
  mv include/KHR $pkgdir/opt/include
}
