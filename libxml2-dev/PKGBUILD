pkgname=libxml2-dev
pkgver=2.12.0
pkgrel=1
pkgdesc='XML parsing library, version 2'
arch=('x86_64')
url="http://www.xmlsoft.org/"
license=('spdx:MIT')
makedepends=('zlib-dev' 'libiconv-dev')
source=("git+https://github.com/GNOME/libxml2.git")
md5sums=('SKIP')

build() {
  cd $srcdir/libxml2
  ./autogen.sh
  ./configure \
    --prefix=/opt \
    --disable-shared \
    --enable-static \
    --with-iconv \
    --with-zlib \
    --with-minimum \
    --with-threads \
    --with-tree \
    --with-thread-alloc
  make
}

package() {
  cd $srcdir/libxml2
  make DESTDIR=$pkgdir install
}
