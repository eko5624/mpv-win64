pkgname=libarchive-dev
pkgver=3.7.4
pkgrel=1
pkgdesc='Multi-format archive and compression library'
arch=('x86_64')
url="https://www.libarchive.org/"
makedepends=('bzip2-dev' 'expat-dev' 'libxml2-dev' 'lzo-dev' 'openssl-dev' 'xz-dev' 'zlib-dev' 'zstd-dev')
license=("BSD")
source=("git+https://github.com/libarchive/libarchive.git")
md5sums=('SKIP')

build() {
  cd $srcdir/libarchive
  rm -rf out && mkdir out && cd out
  cmake .. \
    -G "Ninja" \
    -DCMAKE_INSTALL_PREFIX=/opt \
    -DCMAKE_BUILD_TYPE=Release \
    -DBUILD_SHARED_LIBS=OFF \
    -DENABLE_LZMA=ON  \
    -DENABLE_ZLIB=ON \
    -DENABLE_ZSTD=ON \
    -DENABLE_OPENSSL=ON \
    -DENABLE_BZip2=ON \
    -DENABLE_ICONV=ON \
    -DENABLE_LIBXML2=ON \
    -DENABLE_EXPAT=ON \
    -DENABLE_LZO=ON \
    -DENABLE_LZ4=OFF \
    -DENABLE_LIBB2=OFF \
    -DENABLE_CPIO=OFF \
    -DENABLE_CNG=OFF \
    -DENABLE_CAT=OFF \
    -DENABLE_TAR=OFF \
    -DENABLE_WERROR=OFF \
    -DBUILD_TESTING=OFF \
    -DENABLE_TEST=OFF

  cmake --build .
}
  
package() {
  cd $srcdir/libarchive/out
  DESTDIR=$pkgdir cmake --install .
  mv $pkgdir/msys64/* $pkgdir
}  
